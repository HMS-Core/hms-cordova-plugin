		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/handler/HMSLogger.java" target-dir="src/com/huawei/hms/cordova/site/basef/handler/"></source-file>
		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/handler/Promise.java" target-dir="src/com/huawei/hms/cordova/site/basef/handler/"></source-file>
	</platform>
</plugin>