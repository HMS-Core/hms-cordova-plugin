		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/handler/CorError.java" target-dir="src/com/huawei/hms/cordova/site/basef/handler/"></source-file>
		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/handler/CorException.java" target-dir="src/com/huawei/hms/cordova/site/basef/handler/"></source-file>
