<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-hms-site" version="5.1.0-300" xmlns="http://apache.org/cordova/ns/plugins/1.0" android="http://schemas.android.com/apk/res/android">
	<name>HMS Site</name>
	<description>Cordova HMS Site Plugin</description>
	<license>Apache 2.0</license>
	<keywords>cordova,site,hms-site,huawei-site,hms,huawei</keywords>
	
	<js-module name="HMSSite" src="www/HMSSite.js">
		<clobbers target="HMSSite"></clobbers>
	</js-module>
	
	<js-module name="interfaces" src="www/interfaces.js"></js-module>
	<js-module name="utils" src="www/utils.js"></js-module>
	
	<platform name="android">
		
		<dependency id="cordova-plugin-androidx-adapter" version="1.1.3"/>
		<dependency id="cordova-plugin-androidx" version="3.0.0"/>
		
		<hook type="before_plugin_uninstall" src="hooks/before_plugin_uninstall.js"></hook>
		<hook type="after_plugin_install" src="hooks/after_plugin_install.js"></hook>
		
		<config-file target="config.xml" parent="/*">
			<feature name="HMSSite">
				<param name="android-package" value="com.huawei.hms.cordova.site.HMSSite"></param>
			</feature>
		</config-file>

		<config-file target="res/xml/config.xml" parent="/*">
			<preference name="AndroidXEnabled" value="true"/>
		</config-file>

		<framework src="com.huawei.hms:site:5.1.0.300"></framework>
		<framework src="androidx.appcompat:appcompat:1.2.0"></framework>
		<framework src="androidx.recyclerview:recyclerview:1.1.0"></framework>
		<framework src="src/android/build-extras.gradle" custom="true" type="gradleReference"/>

		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/HMSSite.java" target-dir="src/com/huawei/hms/cordova/site/"></source-file>
		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/HMSSiteModule.java" target-dir="src/com/huawei/hms/cordova/site/"></source-file>
