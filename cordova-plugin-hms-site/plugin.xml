		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/CordovaBaseModule.java" target-dir="src/com/huawei/hms/cordova/site/basef/"></source-file>
		<source-file src="src/android/src/main/java/com/huawei/hms/cordova/site/basef/CordovaEvent.java" target-dir="src/com/huawei/hms/cordova/site/basef/"></source-file>
